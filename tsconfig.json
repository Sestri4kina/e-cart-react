{
    "compilerOptions": {
      // "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "lib": [
        "dom",
        "es2015",
        "es2017"
      ],
      "typeRoots": [
        "./node_modules/@types"
    ],
      "allowJs": true,
      "strict": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "strictPropertyInitialization": false,
      "inlineSources": true,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "paths": {
        "@store/*": ["src/app/store/*"],
        "@utils/*": ["src/app/utils/*"],
        "@components/*": ["src/app/components/*"],
        "@containers/*": ["src/app/containers/*"],
        "@styles/*": ["src/styles/*"]
      }
    },
    "include": [
      "./src/**/**/*"
    ]
  }
